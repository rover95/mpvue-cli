.shop-cell{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding: 16rpx 0;
  padding-right: 16rpx;
  line-height: 1;
}
.shop-img{
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 3px;
}
.shop-name{
  line-height: 1.5;
  color: #333;
  font-weight: 700;
  font-size: 16px;
}
.shop-info{
  line-height: 1.5;
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
  width: 100%;
  flex-grow: 1;
  padding-right: 20rpx;
  padding-left: 16rpx;
