/* 工地选择器 */
.sensor-modal-show .picker-container {
  transform: translateY(0); 
}
.sensor-modal-show .sensorType-screen {
 display: block;
}
.sensorType-screen{
  width: 100%;
  height:100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 10000;
  color: #fff;
  display: none;
}
.picker-container {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0; 
  z-index: 10001;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease; 
}
