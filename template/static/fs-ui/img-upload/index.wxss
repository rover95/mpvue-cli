.add-image-container{
  background:rgb(255,255,255);
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding:30rpx 30rpx;
}

.image-delete-container{
  float: left;
  margin-right: 10rpx;
  position: relative;
  /* top: 4px; */
}

.uploader-container {
  float: left;
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 3rpx solid #d9d9d9;
  border-radius: 6rpx;
}
.uploader-container:before, .uploader-container:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.uploader-container:before {
  width: 2px;
  height: 39.5px;
}
.uploader-container:after {
  width: 39.5px;
  height: 2px;
}
.uploader-container:active {
  border-color: #999;
}
.uploader-container:active:before, .uploader-container:active:after {
  background-color: #999;
}
.uploader-btn{
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}


.delete-container{
  position: absolute;
  right: 0;
  top: 0;
  z-index: 5;
}

.delete-btn{
  width: 20px;height: 20px;border-radius: 20px;background: #000;color: #fff;font-size: 14px;
  text-align: center;
  line-height: 20px;
  position: absolute;
  top: 0px;
  right: -8px;
  z-index: 5;
}

.image-put{
  display: block;
  width: 221rpx;
  height: 221rpx;
  margin-top: 20rpx;
  background: rgb(245,245,245);
}